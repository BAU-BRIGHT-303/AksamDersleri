@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechSane.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechSane.Web.styles.css" asp-append-version="true" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;400;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="page-wrapper chiller-theme toggled">
        <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
            <i class="fas fa-bars"></i>
        </a>
        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content">
                <div class="sidebar-brand">
                    <a style="color:white !important" asp-controller="Home" asp-action="Index">TechSane</a>
                    <div id="close-sidebar">
                        <i class="fas fa-times"></i>
                    </div>
                </div>
                <div class="sidebar-header">
                    <div class="row text-center">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <div class="me-3 text-light">
                                @User?.Identity?.Name.ToUpper()
                            </div>

                            <a class="btn me-3 bg-light text-dark" asp-controller="Account" asp-action="Logout">Logout</a>

                        }
                        else
                        {
                            <div class="d-flex btn-box text-center">
                                <a class="btn bg-light text-dark" asp-controller="Account" asp-action="Login">Login</a>

                                <a class="btn bg-light text-dark" asp-controller="Account" asp-action="Register">Register</a>
                            </div>
                        }
                    </div>
                </div>
                <div class="sidebar-menu">
                    <ul>
                        <li class="header-menu">
                            <span style="color:white !important">General</span>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Index">
                                <i class="fa fa-folder"></i>
                                <span>All Products</span>
                            </a>
                        </li>
                        <li class="sidebar-dropdown">
                            <a>
                                <i class="fa fa-tachometer-alt"></i>
                                <span>Brands</span>
                                <span class="badge badge-pill badge-warning">New</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a asp-controller="ListingCategories" asp-action="ListApple">
                                            Apple
                                            <span class="badge badge-pill badge-success">Pro</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="ListingCategories" asp-action="ListSony">
                                            Sony
                                            <span class="badge badge-pill badge-success">Pro</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="ListingCategories" asp-action="ListSamsung">
                                            Samsung
                                            <span class="badge badge-pill badge-success">Pro</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-shopping-cart"></i>
                                <span>E-commerce</span>
                                <span class="badge badge-pill badge-danger">3</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a asp-controller="UnderConstruction" asp-action="Index">
                                            Products

                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="UnderConstruction" asp-action="Index">Orders</a>
                                    </li>
                                    <li>
                                        <a asp-controller="UnderConstruction" asp-action="Index">Credit cart</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="far fa-gem"></i>
                                <span>On Sales</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a asp-controller="UnderConstruction" asp-action="Index">General</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-chart-line"></i>
                                <span>Populars</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a asp-controller="UnderConstruction" asp-action="Index">Products</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-globe"></i>
                                <span>Around the World</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a asp-controller="UnderConstruction" asp-action="Index">Global Products</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="header-menu">
                                <span style="color:white !important">Admin Actions</span>
                            </li>
                            <li>
                                <a asp-controller="AdminProduct" asp-action="Add">
                                    <i class="fa fa-book"></i>
                                    <span>Add New Product!</span>
                                    <span class="badge badge-pill badge-primary"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="AdminProduct" asp-action="List">
                                    <i class="fa fa-folder"></i>
                                    <span>List & Edit Products!</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="AdminCategories" asp-action="Add">
                                    <i class="fa fa-book"></i>
                                    <span>Add New Category!</span>
                                    <span class="badge badge-pill badge-primary"></span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="AdminCategories" asp-action="List">
                                    <i class="fa fa-folder"></i>
                                    <span>List & Delete Categories!</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <!-- sidebar-menu  -->
            </div>

        </nav>
        <!-- sidebar-wrapper  -->
        <main role="main" class="page-content">
            @RenderBody()
        </main>

        <!-- page-content" -->
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

