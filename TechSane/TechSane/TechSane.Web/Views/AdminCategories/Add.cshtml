@model TechSane.Web.Models.ViewModels.AddCategoryRequest
<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Category Name</label>
            <input type="text" class="form-control" id="categoryName" asp-for="DisplayName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="desc" asp-for="Name"></input>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark w-100">Save</button>
        </div>

    </form>
</div>

