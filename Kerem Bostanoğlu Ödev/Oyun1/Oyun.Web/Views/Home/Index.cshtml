@model Oyun.Web.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

@if (Model != null && Model.Games.Any())
{
    <div class="container-fluid text-center text-light mt-2" style="height: 70px; border-bottom: 3px solid #66B933; background-color: #212529 ">
        <h1 class="pt-2"> Welcome to Oyun.Web!</h1>
    </div>

    <div class="container">
        <div class="row  d-flex justify-content-center">

            @foreach (var item in Model.Games)
            {
               
                        <div class="col-md-3 mt-3 me-5">
                            <div class="card" style="width: 18rem; height:450px">
                                <img class="card-img-top" src="@item.FeaturedImageUrl" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Title</h5>
                                    <p class="card-text">@item.Description.Substring(0,100)...</p>
                                    <div class="text-end">

                                        <a asp-controller="Detail" asp-action="Index" asp-route-urlHandle="@item.UrlHandle" class="btn btn-dark">Details</a>
                                    </div>
                                </div>
                            </div>
                      
                </div>

            }
        </div>
    </div>
}