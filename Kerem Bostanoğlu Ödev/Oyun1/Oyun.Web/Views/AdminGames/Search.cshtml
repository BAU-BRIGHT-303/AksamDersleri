@model List<Oyun.Web.Models.Domain.Game>
@{
}

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <form asp-controller="AdminGames" asp-action="Search" method="get">
            <div class="form-group">
                <label for="SearchString">Search by Game Title:</label>
                <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-dark" />
                <input type="submit" value="See All" class="btn btn-dark" asp-action="List" />
            </div>
        </form>
        <table class="table table-dark table-bordered mt-2 table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Heading</th>
                    <th>Url Handle</th>
                    <th>Description</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model)
                {
                    <tr>
                        <td>@game.Id</td>
                        <td>@game.Title</td>
                        <td>@game.Heading</td>
                        <td>@game.UrlHandle</td>
                        <td>@game.Description</td>
                        <td> <a class="btn btn-light " asp-controller="AdminGames" asp-action="Edit" asp-route-id="@game.Id">Edit</a></td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <h1 class="text-center">There is no data to be listed.</h1>
    }

</div>